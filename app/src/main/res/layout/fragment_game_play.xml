<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/calligraphr_regular"
        android:text="@string/tv_tittle_hangman"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:layout_below="@+id/title"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:src="@drawable/vacio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/img" />

    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/trick"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_below="@id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/wordTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trick"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/init_word"/>



    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/wordTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/letter_a"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/a"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/letter_b"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/b"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_c"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/c"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/letter_d"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/d"
                android:layout_marginEnd="2dp"
                />
            <Button
                android:id="@+id/letter_e"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/e"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_f"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/f"
                android:layout_marginEnd="2dp"/>
            <Button
                android:id="@+id/letter_g"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/g"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_h"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/h"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_i"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/i"
                android:layout_marginEnd="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <Button
                android:id="@+id/letter_j"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/j"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_k"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/k"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_l"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/l"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_m"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/m"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_n"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/n"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/letter_nn"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/Ã±"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/letter_o"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/o"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_p"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/p"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_q"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/q"
                android:layout_marginEnd="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/letter_r"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/r"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/letter_s"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/s"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_t"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/t"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_u"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/u"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_v"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/v"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_w"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/w"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_x"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/x"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_y"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/y"
                android:layout_marginEnd="2dp" />
            <Button
                android:id="@+id/letter_z"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="@string/z"
                android:layout_marginEnd="2dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:fontFamily="@font/calligraphr_regular"
        android:id="@+id/game_over"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/wordTv"
        android:text="@string/tv_game_over"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <Button
        android:visibility="gone"
        android:id="@+id/btn_restart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/calligraphr_regular"
        android:text="@string/btn_restart"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>